{
  "builders": [
    {
      "type": "proxmox-iso",
      "proxmox_url":  "{{user `proxmox_url`}}",
      "insecure_skip_tls_verify": true,
      "username": "{{user `proxmox_username`}}",
      "password": "{{user `proxmox_password`}}",
      "vm_id":  "{{user `vm_id`}}",
      "vm_name": "{{user `vm_name`}}",
      "template_name": "{{user `vm_name`}}-template",
      "template_description":"{{user `template_description`}}",
      "memory": "{{user `vm_memory`}}",
      "cores": "{{user `vm_cores`}}",
      "cpu_type": "host",
      "os": "l26",
      "http_directory": "http",
      "node": "pve",
      "network_adapters": [
        {
          "model": "virtio",
          "bridge": "vmbr0"
        }
      ],
      "disks": [
        {
          "type": "scsi",
          "disk_size": "{{user `vm_disksize`}}",
          "storage_pool": "local-lvm",
          "storage_pool_type": "lvm"
        }
      ],
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "30m",
      "iso_file": "local:iso/{{user `iso_filename`}}",
      "unmount_iso": true,
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " initrd=/install/initrd.gz",
        " auto-install/enable=true",
        " debconf/priority=critical",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed_2.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ]
    }
  ],
  "post-processors": [
    {
      "output": "{{ user `build_directory` }}/{{user `box_basename`}}.{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "{{template_dir}}/scripts/update.sh",
        "{{template_dir}}/_common/motd.sh",
        "{{template_dir}}/_common/sshd.sh",
        "{{template_dir}}/scripts/networking.sh",
        "{{template_dir}}/scripts/sudoers.sh",
        "{{template_dir}}/scripts/vagrant.sh",
        "{{template_dir}}/_common/virtualbox.sh",
        "{{template_dir}}/scripts/vmware.sh",
        "{{template_dir}}/_common/parallels.sh",
        "{{template_dir}}/scripts/hyperv.sh",
        "{{template_dir}}/scripts/cleanup.sh",
        "{{template_dir}}/_common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "proxmox_url": "https://192.168.221.148:8006/api2/json",
    "proxmox_username": "root@pam",
    "proxmox_password": "{{env `PROXMOX_PWD`}}",
    "iso_filename": "ubuntu-18.04.5-live-server-amd64.iso",
    "vm_id": "100",
    "vm_name": "logger",
    "template_description": "Ubuntu 18.04 x86_64 template Bento/chef built with packer",
    "vm_memory": "2048",
    "vm_cores": "1",
    "vm_disksize": "8G",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "http_directory": "{{template_dir}}/http",
    "preseed_path": "preseed.cfg"
  }
}
